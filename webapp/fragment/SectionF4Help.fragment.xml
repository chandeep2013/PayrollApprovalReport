<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        class="sapUiContentPadding"
        title="{i18n>section}"
        contentWidth="35%"
    >
        <content>
            <Table id="idSectionTable" sticky="ColumnHeaders,HeaderToolbar" growing="true" growingThreshold="50" growingScrollToLoad="true"
            items="{
			path: 'valueHelp>/section',
			sorter: {
				path: 'Name'
			}
		}">
                <headerToolbar>
			<OverflowToolbar>
				<content>
					<SearchField search="onSearchSection" liveChange="onSearchSection"></SearchField>
					<ToolbarSpacer />
				</content>
			</OverflowToolbar>
		</headerToolbar>
                <columns>
                    <Column>
                        <Text text="{i18n>id}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>name}"  />
                    </Column>
                    <Column>
                        <Text text="{i18n>desc}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Active" press="onSelectSection">
                        <cells>
                            <Text text="{valueHelp>ID}"/>
                            <Text text="{valueHelp>Name}" />
                            <Text text="{valueHelp>Description}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    type="Negative"
                    text="Close"
                    press="oSectionF4HelpCancel"
                />
            </OverflowToolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
